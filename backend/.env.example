# ================================
# Server Configuration
# ================================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ================================
# Firebase Admin SDK Configuration
# ================================
# Option 1: Service account JSON as environment variable (for production/deployment)
# Paste the entire JSON content of your service account key
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Option 2: Path to service account JSON file (for local development)
FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/your-service-account-key.json

# Firebase project configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# ================================
# MongoDB Configuration
# ================================
# Still used for job tracker, job alerts, and other non-community features
MONGODB_URI=mongodb://localhost:27017/velocity

# ================================
# Google AI (Gemini) Configuration
# ================================
GEMINI_API_KEY=your_gemini_api_key

# ================================
# RapidAPI Configuration (Job Search)
# ================================
RAPIDAPI_KEY=your_rapidapi_key

# ================================
# Email Service Configuration (Nodemailer)
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@yourapp.com

# ================================
# Redis Configuration (Optional - for job queues)
# ================================
# REDIS_URL=redis://localhost:6379

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
