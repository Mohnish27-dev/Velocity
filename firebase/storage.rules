rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to validate file size (max 5MB)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Helper function to validate large file size (max 10MB for images)
    function isValidImageSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Helper function to validate PDF file type
    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }
    
    // Helper function to validate image file type
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Resume storage rules
    match /resumes/{userId}/{allPaths=**} {
      // Only authenticated users can read their own resumes
      allow read: if isOwner(userId);
      
      // Only authenticated users can upload PDF files under 5MB
      allow create: if isOwner(userId) && isPDF() && isValidSize();
      
      // Allow updates (for enhanced versions)
      allow update: if isOwner(userId) && isPDF() && isValidSize();
      
      // Allow deletion
      allow delete: if isOwner(userId);
    }
    
    // Community attachments (messages, posts)
    match /community/{type}/{attachmentId} {
      // Authenticated users can read all community attachments
      allow read: if isAuthenticated();
      
      // Authenticated users can upload images
      allow create: if isAuthenticated() && isImage() && isValidImageSize();
      
      // Only the uploader can delete (tracked via custom metadata)
      allow delete: if isAuthenticated();
    }
    
    // User avatars
    match /avatars/{userId} {
      // Anyone can read avatars
      allow read: if true;
      
      // Only owner can upload/update their avatar
      allow create, update: if isOwner(userId) && isImage() && isValidImageSize();
      allow delete: if isOwner(userId);
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
